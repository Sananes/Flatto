	{{ 'foundation.min.js' | asset_url | script_tag }}
  
  	<script>
    $(document).foundation();
    $("#searchform").foundation('reveal', {
        animation: 'fadeAndPop',
        animationSpeed: 250,
        closeOnBackgroundClick: true,
        dismissModalClass: 'close-reveal-modal',
        bgClass: 'reveal-modal-bg',
        open: function(){

        },
        opened: function(){
          $(this).find("input").focus();
        },
        close: function(){},
        closed: function(){},
        bg : $('.reveal-modal-bg'),
        css : {
          open : {
            'opacity': 0,
            'visibility': 'visible',
            'display' : 'block'
          },
          close : {
            'opacity': 1,
            'visibility': 'hidden',
            'display': 'none'
          }
        }
});

  	</script>

