<!DOCTYPE html>
<!--[if IE 8]> 				 <html class="no-js lt-ie9" lang="en" > <![endif]-->
<!--[if gt IE 8]> <html class="no-js" lang="en" > <![endif]-->

<head>

	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">  

	{% comment %} Shopify Head Begin {% endcomment %}

	{% if template == 'index' %}
	<title>{{ shop.name }} | {{ page_title }}</title>
	{% elsif template == '404' %}
	<title>Page Not Found | {{ shop.name }}</title>
	{% else %}
	<title>{{ page_title }} | {{ shop.name }}</title>
	{% endif %}

	{% if page_description %}
	<meta name="description" content="{{ page_description }}" />
	{% endif %}
  {% include 'meta' %} 
	{{ content_for_header }}


  <!-- Header Scripts -->
  {% include 'header-scripts' %} 

</head>

<body class="{{ template | replace: '.', ' ' | truncatewords: 1, '' }} antialiased off-canvas hide-extras" id="{% if template == 'index' %}home{% else %}{{ page_title || handle }}{% endif %}">


  

 <div id="wrapper" role="main">
        {% include 'header' %}
  	<!-- Include Main Content -->


    <!-- Include Top Navigation -->

    <!-- End Include Top Navigation -->
      {% if template == 'index' %}
        {% if settings.slideshow_enable %}
      <!-- Slideshow -->
        {% include 'slideshow' %}
      <!-- End Slideshow -->
        {% endif %}
      {% endif %}
        <main id="main-content" class="row">


  		{% if template == 'list-collections' %}
  		  {% include 'collection-listing' %}
  		{% else %}
  		  {{ content_for_layout }}
  		{% endif %}
  


  	</main>
  	<!-- End Include Main Content -->

	{% if settings.bottom_menu_on %}  
		<!-- Include Bottom Navigation -->
			{% include 'bottom-navigation' %}
		<!-- End Include Bottom Navigation -->
	{% endif %}
 
  	<!-- Include Footer -->
		{% include 'footer' %}
  	<!-- End Include Footer Content -->
     </div>

  
	{% include 'footer-scripts' %}


   
 
</body>
</html>
